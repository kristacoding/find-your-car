<div class="jumbotron jumbotron-fluid">
    <div class="container car-form">
        <h1 class="display-4" style="middle">Tell Us About Your Car?</h1>
        <form>
            <div class="form-group">
                <label for="city">Car Location</label>
                <input type="city" class="form-control" id="city" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="make">Make of Car</label>
                <input type="make" class="form-control" id="make">
            </div>
            <div class="form-group">
                <label for="model">Model of Car</label>
                <input type="model" class="form-control" id="model">
            </div>
            <div class="form-group">
                <label for="year">Year of Car</label>
                <input type="year" class="form-control" id="year">
            </div>
            <div class="form-group">
                <label for="milage">Milage</label>
                <input type="milage" class="form-control" id="mileage">
            </div>
            <button type="search" class="btn btn-primary">Submit</button>
        </form>
        
    </div>
</div>

<div class = "container">
    <h2>Available Cars</h2>
    {{#each cars}}
    <div class="row">
        <div class="col card" style="width:18rem;">
            <div class = "card-body">
            <img src="https://via.placeholder.com/150" class="carImage" data-make="{{make}}" data-model="{{model}}" data-year="{{year}}"/>   
            <p></p>
            <h5 class="card-title">Make: {{make}} {{model}}</h5>
            <h6 class="card-subtitle mb-2">Year: {{year}}    Mileage: {{mileage}}</h6>
            <p class="card-text">Pick this {{make}} {{model}} up in {{city}}!</p>
            <p><button type="submit button" class="btn btn-primary delete" id={{this.id}}>Buy Now!</button></p>
            </div>
        </div>
    </div>
    {{/each}}
</div>